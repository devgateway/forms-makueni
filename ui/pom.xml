    <artifactId>ui</artifactId>
    <packaging>jar</packaging>

    <name>OCExplorer UI</name>
    <description>OCExplorer UI Module</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <start-class>org.devgateway.toolkit.ui.UIWebApplication</start-class>
        <skip.frontend.build>false</skip.frontend.build>
        <checkstyle.skip>true</checkstyle.skip>
        <npmArgs>install</npmArgs>
        <npmScript>build</npmScript>
    </properties>

    <parent>
        <groupId>org.devgateway.toolkit</groupId>
        <artifactId>makueni</artifactId>
        <version>1.13.2-SNAPSHOT</version>
